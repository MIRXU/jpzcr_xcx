/* music_house/music_house.wxss */
.music_house_nav{
  display: inline-block;
  width: 25%;
  /* float: left; */
  text-align: center;
  font-size: 16px;
  padding-bottom: 5px;
}
.active{
 border-bottom: 1px solid #666666;
}
.music_item{
 display: inline-block;
 padding: 10px;
 padding-top: 10px;
}
.music_item image{
  width: 100px;
  height: 100px
}
.music_item text{
  font-size: 14px;
  display: block;
  text-align: left
}
.music_good{
  font-size: 16px;
  color: #1296DB;
  line-height: 30px;
  padding-left: 10px;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


.link_music text{
  clear: both;
  font-size: 16px;
  color: #666666;
  width: 25%;
  display: inline-block;
  text-align: center;

}
.author{
  display: inline-block;
  padding: 10px;
}
.author image{
  width: 80px;
  height: 80px;
  border-radius: 40px;
  display: block;
}
.author text{
  font-size: 16px;
  text-align: center;
  padding-top: 5px;
  padding-left: 10px;
}
